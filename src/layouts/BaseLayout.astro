---
const props = Astro.props;
---

<!doctype html>
<html lang="en, cy, br" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{props.title}</title>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
			integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ"
			crossorigin="anonymous"
		/>
	</head>
	<body>
		<main>
			<nav class="p-4">
				<a href="/" class="flex align-center text-stone-600">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 24 24"
						width="24"
						height="24"
					>
						<path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"></path>
					</svg>
				</a>
			</nav>
			<div class="container mx-auto p-4 flex flex-col items-stretch">
				<slot />
			</div>
		</main>
	</body>
</html>
<style is:global>
	:root[data-theme='light'] {
		--text: #202122;
		--background: #cccfd7;
		--primary: #08447d;
		--secondary: #4d78a3;
		--accent: #e4e4e4;
	}
	:root[data-theme='dark'] {
		--text: #dddedf;
		--background: #282b33;
		--primary: #82bff7;
		--secondary: #5c87b2;
		--accent: #171717;
	}
	body {
		min-height: 100vh;
		background-color: var(--background);
		color: var(--text);
	}
	h1 {
		font-size: 2rem;
		font-weight: 600;
		line-height: 1;
		margin-bottom: 1.5rem 0 0.75rem 0;
	}
	h2 {
		font-size: 1.7rem;
		font-weight: 500;
		line-height: 1;
		margin: 1.5rem 0 0.75rem 0;
	}
	h3 {
		font-size: 1.5rem;
		font-weight: 500;
		line-height: 1;
		margin: 1.5rem 0 0.75rem 0;
	}
	p {
		font-size: 1rem;
		line-height: 1.5;
		margin-bottom: 1em;
	}
	a {
		color: var(--primary);
	}
	a:hover {
		color: var(--secondary);
	}
	img {
		max-width: 100vw;
		width: 100%;
		padding: 1em;
		height: auto;
	}

	pre {
		max-width: 100vw;
		width: 100%;
		overflow-x: auto;
	}

	/* .dashboard */
	.dashboard {
		font-family: inherit;
		padding-left: 25px !important;
		padding-right: 25px !important;
		padding-top: 20px !important;
	}

	.dashboard h1 {
		margin-top: 1em;
	}
	.dashboard > ul {
		border-bottom-style: dotted !important;
		border-width: 1px 0 0 0 !important;
		margin-top: 1em !important;
		font-weight: 600;
		display: flex !important;
		flex-wrap: wrap !important;
		width: 100%;
		padding-left: 0px !important;
	}
	.dashboard > ul > li {
		padding-top: 1em;
		padding: 1rem 0rem;
		flex: 0 1 350px;
		max-width:;
		padding-right: 3em;
	}
	.dashboard li::marker {
		color: gray;
	}
	.dashboard ul li ul li {
		list-style-type: disc;
		font-weight: 400;
		margin-left: 2em !important;
		margin-bottom: 0;
	}
	.dashboard table {
		width: 100%;
		table-layout: fixed;
	}
	.dashboard td {
		padding-right: 8px;
		padding-top: 0.7em;
		vertical-align: baseline;
	}
</style>
